extends layout
block content
    script(src="javascripts/forget.js")
    br
    br
    div.container
        div(style="width:50%;margin-left:auto;margin-right:auto")
            br
            .panel.panel-default(style='background-color:#E1E1E1')
                .panel-body
                    div(style='text-align:center')
                        h2 Forget Your Password?
                    br
                    input#emladdr.form-control(type="email" placeholder="Email Address" required=true value="#{fill_emladdr}")
                    p &nbsp;&nbsp;You must do this in places you usually log in.
                    br
                    button#resetbtn.btn.btn-md.btn-danger.btn-block Reset My Password
                    br
                    p
                        a(style='float:left' href="#" onclick="window.location.href = '?fill_emladdr=' + encodeURI($('#emladdr').val());") Go back to Login
                    br
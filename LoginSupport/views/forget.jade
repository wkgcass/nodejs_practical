extends layout
block content
    script(src="http://7xkuii.com1.z0.glb.clouddn.com/forget.js")
    br
    br
    - if(!is_phone){
        div.container
            div(style="width:50%;margin-left:auto;margin-right:auto")
                br
                .panel.panel-default(style='background-color:#E1E1E1')
                    .panel-body
                        div(style='text-align:center')
                            h2 #{lan.title.forget}
                        br
                        input#emladdr.form-control(type="email" placeholder="#{lan.input.emladdr}" required=true value="#{fill_emladdr}")
                        p &nbsp;&nbsp;#{lan.hints.reset_password}
                        br
                        button#resetbtn.btn.btn-md.btn-danger.btn-block #{lan.button.reset}
                        br
                        p
                            a(style='float:left' href="#" onclick="window.location.href = '?fill_emladdr=' + encodeURI($('#emladdr').val());") #{lan.a.login}
                        br
    - }else{
        div(style="width:50%;margin-left:auto;margin-right:auto")
            br
            .panel.panel-default(style='background-color:#E1E1E1')
                .panel-body
                    div(style='text-align:center')
                        h2 #{lan.title.forget}
                    br
                    input#emladdr.form-control(type="email" placeholder="#{lan.input.emladdr}" required=true value="#{fill_emladdr}")
                    p &nbsp;&nbsp;#{lan.hints.reset_password}
                    br
                    button#resetbtn.btn.btn-md.btn-danger.btn-block #{lan.button.reset}
                    br
                    p
                        a(style='float:left' href="#" onclick="window.location.href = '?fill_emladdr=' + encodeURI($('#emladdr').val());") #{lan.a.login}
                    br
    - }